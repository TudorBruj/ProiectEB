@model IEnumerable<ProiectEB.Models.Stoc>

@{
    ViewData["Title"] = "Stocuri";
}

<h1 class="text-warning fw-bold">Stocuri</h1>

<form asp-action="Index" method="get" class="row g-3 mb-4">
    <div class="col-md-4">
        <input type="text" name="searchLocation" class="form-control" placeholder="Locație depozit" />
    </div>
    <div class="col-md-4">
        <input type="number" name="minQuantity" class="form-control" placeholder="Cantitate minimă" />
    </div>
    <div class="col-md-2 d-grid">
        <button type="submit" class="btn btn-primary">Filtrează</button>
    </div>
</form>
<p>
    <a asp-action="Create" class="btn btn-success">Adaugă Stoc Nou</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Produs</th>
            <th>Locație Depozit</th>
            <th>Cantitate</th>
            <th>Acțiuni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Produs?.Nume
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LocatieDepozit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cantitate)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
