@model ProiectEB.Models.Recenzie

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Recenzie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="IdClient" class="control-label">Client</label>
                <select asp-for="IdClient" class="form-control" asp-items="ViewBag.IdClient">
                    <option value="">Selectează un client</option>
                </select>
                <span asp-validation-for="IdClient" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdProdus" class="control-label">Produs</label>
                <select asp-for="IdProdus" class="form-control" asp-items="ViewBag.IdProdus">
                    <option value="">Selectează un produs</option>
                </select>
                <span asp-validation-for="IdProdus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Evaluare" class="control-label"></label>
                <input asp-for="Evaluare" class="form-control" />
                <span asp-validation-for="Evaluare" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comentariu" class="control-label"></label>
                <textarea asp-for="Comentariu" class="form-control"></textarea>
                <span asp-validation-for="Comentariu" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
