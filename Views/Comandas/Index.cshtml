@model IEnumerable<ProiectEB.Models.Comanda>

@{
    ViewData["Title"] = "Index";
}

<h1>Comenzi</h1>

<form asp-action="Index" method="get" class="form-inline mb-3">
    <div class="form-group mr-2">
        <input type="text" name="searchClient" class="form-control" placeholder="Caută după client" />
    </div>
    <div class="form-group mr-2">
        <input type="text" name="searchDate" class="form-control" placeholder="Data comenzii (yyyy-mm-dd)" />
    </div>
    <button type="submit" class="btn btn-primary">Caută</button>
</form>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Client)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataComenzii)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPlatit)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Client.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataComenzii)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPlatit)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
