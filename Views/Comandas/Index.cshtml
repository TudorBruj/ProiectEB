@model IEnumerable<ProiectEB.Models.Comanda>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-warning fw-bold">Comenzi</h1>

<form asp-action="Index" method="get" class="row g-3 mb-4">
    <div class="col-md-4">
        <input type="text" name="searchClient" class="form-control" placeholder="Caută după client" />
    </div>
    <div class="col-md-4">
        <input type="date" name="searchDate" class="form-control" placeholder="Data comenzii" />
    </div>
    <div class="col-md-2 d-grid">
        <button type="submit" class="btn btn-primary">Caută</button>
    </div>
</form>

<p>
    <a asp-action="Create" class="btn btn-success">Adaugă Comandă Nouă</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Client)</th>
            <th>@Html.DisplayNameFor(model => model.DataComenzii)</th>
            <th>@Html.DisplayNameFor(model => model.TotalPlatit)</th>
            <th>Acțiuni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Client.Nume)</td>
                <td>@Html.DisplayFor(modelItem => item.DataComenzii)</td>
                <td>@Html.DisplayFor(modelItem => item.TotalPlatit)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
