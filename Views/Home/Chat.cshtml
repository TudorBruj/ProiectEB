@{
    ViewData["Title"] = "Chat";
}
<h1>@ViewData["Title"]</h1>
<div class="alert alert-info" role="alert">
    🤖 Salut! Sunt ChatBot-ul magazinului. Pot să răspund la întrebări precum: "Care sunt metodele de plată?" sau "Care este programul de livrare?".
</div>
<div class="container">
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-2">Utilizator</div>
        <div class="col-4"><input type="text" id="userInput" class="form-control" placeholder="Introdu numele tău..." /></div>
    </div>
    <div class="row">
        <div class="col-2">Mesaj</div>
        <div class="col-4"><input type="text" id="messageInput" class="form-control" placeholder="Scrie un mesaj..." /></div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-6">
            <input type="button" id="sendButton" class="btn btn-primary" value="Trimite mesaj" />
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div id="chatWindow" style="height: 300px; overflow-y: scroll; border: 1px solid #ccc; padding: 10px; background-color: #f9f9f9;">
            <ul id="messagesList" style="list-style-type: none; padding: 0; margin: 0;"></ul>
        </div>
    </div>
</div>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>
